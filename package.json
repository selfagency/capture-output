{
  "name": "capture-output",
  "version": "2.0.0",
  "description": "Capture the output (and duration) of a command as a GitHub Actions `output` or file",
  "license": "MIT",
  "author": "Daniel Sieradski <daniel@self.agency>",
  "repository": {
    "type": "git",
    "url": "https://github.com/selfagency/capture-output.git"
  },
  "type": "module",
  "main": "dist/action.js",
  "scripts": {
    "build": "tsc --project .",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "format": "oxfmt --write",
    "lint": "oxlint",
    "lint-staged": "lint-staged --allow-empty",
    "lint:fix": "oxlint --fix",
    "prepare": "husky install",
    "start": "npx tsx src/action.ts"
  },
  "dependencies": {
    "@actions/core": "3.0.0",
    "@actions/exec": "3.0.0",
    "@actions/io": "3.0.2"
  },
  "devDependencies": {
    "@types/node": "25.3.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "oxfmt": "^0.34.0",
    "oxlint": "^1.49.0",
    "oxlint-tsgolint": "^0.14.2",
    "typescript": "5.9.3",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{js,json,md,yml}": [
      "pnpm lint:fix",
      "pnpm format"
    ]
  },
  "packageManager": "pnpm@10.30.0+sha512.2b5753de015d480eeb88f5b5b61e0051f05b4301808a82ec8b840c9d2adf7748eb352c83f5c1593ca703ff1017295bc3fdd3119abb9686efc96b9fcb18200937"
}
